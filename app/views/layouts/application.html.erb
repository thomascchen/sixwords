<!DOCTYPE html>
<html>
<head>
  <title>Sixwords</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="top-bar">
    <ul class="title-area">
      <li class="name">
        <h1><a href="/">Sixwords</a></h1>
      </li>
    </ul>

    <section class="top-bar-section">
      <ul class="right">
        <li><%= form_tag("/", method: "get") do %>
        <%= text_field_tag(:query) %></li>
        <li><%= submit_tag("Search") %>
        <% end %></li>
        <li><%= link_to "Random", memoirs_path %></li>
        <li><%= link_to "Neighborhoods", neighborhoods_path %></li>
        <li><%= link_to "Submit", new_memoir_path %></li>
        <%- if current_user -%>
          <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
        <%- else -%>
          <li><%= link_to 'Sign Up', new_user_registration_path %></li>
          <li><%= link_to 'Sign In', new_user_session_path %></li>
        <%- end -%>
      </ul>
    </section>
  </nav>

  <%- flash.each do |key, value| -%>
    <div class="flash flash-<%= key %>">
      <%= value %>
    </div>
  <%- end -%>

  <%= yield %>

  <%= javascript_include_tag 'application' %>
  <%= yield :extra_footer %>
</body>
</html>
